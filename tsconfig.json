{
    "compilerOptions": {
        "sourceMap": true,
        "module": "es2015",
        "target": "es2018",
        "moduleResolution": "node",
        "outDir": "./dist",
        "jsx": "react",
        "skipLibCheck": true,
        "declaration": true,
        "declarationMap": true,
        "noEmit": true,
        "esModuleInterop": true,
        "lib": ["dom", "dom.iterable", "esnext"],
        "strict": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true
    },
    "exclude": ["./cypress.config.ts", "**/*.spec.ts"]
}
